{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6" style="padding: 0 !important;border-bottom: 3px solid lightgray !important;border-radius: 10px;">
      <div class="card shadow-sm">
        <div class="card-body text-center">

          {# Avatar #}
          <div class="avatar mb-3">
            <img src="{{ asset('assets/avatars/' ~ app.user.avatar) }}" alt="Avatar de {{ app.user.username }}" class="avatar-profile">
          </div>

          {# Formulaire #}
          {{ form(formProfile) }}

        </div>
      </div>
    </div>
  </div>
</div>

<style>
  label {
    display: flex;
    justify-content: flex-start;
  }
  .card {
    padding: 0 !important;
  }
  .avatar {
    width: 120px;
    height: 120px;
    margin: 0 auto;
  }

  .avatar-profile {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid lightgrey;
    transition: transform 0.3s ease;
  }

  .avatar-profile:hover {
    transform: scale(1.05);
  }

  @media (max-width: 576px) {
    .avatar {
      width: 90px;
      height: 90px;
    }
  }
</style>
{% endblock %}
