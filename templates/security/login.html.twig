{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-4" style="padding: 0 !important;border-bottom: 3px solid lightgray !important;border-radius: 10px;">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <form method="post">
              {% if error %}
                <script>
                  Swal.fire({
                    text: "{{error.messageKey}}",
                    icon: "error"
                  });
                </script>
              {% endif %}
              <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
              <label for="inputUsername">Pr√©nom</label>
              <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-3" autocomplete="username" required autofocus>
              <label for="inputPassword">Mot de passe</label>
              <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>
              <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
              <input type="submit" value="Connexion" class="btn btn-primary">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
